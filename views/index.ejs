<body>
  <%- include('partials/_header') %>

<!-- Page-specific (main) content here -->
<main class="container">
  <section class="welcome" >
    <h1>Welcome to Schoodle!</h1>
    <br>
    <p>Where all your scheduling needs are met!</p>
    <button class="button" >Create an event</button> <!-- reload this container with the welcome class hidden and the new-event class showing -->
  </section>

  <section class="new-event" hidden="true">
    <h1>Create an Event</h1>
    <form method="POST" action="/" class="submitForm">
      <label>Title:</label>
      <textarea placeholder="Event Title" name="text" ></textarea>
      <label>Description:</label>
      <textarea placeholder="Write a short description" name="text" ></textarea>
      <label>Name:</label>
      <textarea placeholder="Your full name" name="text" ></textarea>
      <label>Email:</label>
      <input type="email" name="email" required placeholder="Enter email" style="Width: 250px"/>
      <button class="button" type="submit">Continue</button> <!-- Routes to GET timeslots -> carry over data from this form via cookies -->
    </form>
  </section>
  </main>
</body>

